<header>
<h1>Edit this deck</h1>
</header>
<div class="deck-form">
  <%= form_for(@deck) do |form| %>
    <div class="input-append">
      <%= form.text_field :name, placeholder: "Deck name" %><%= form.submit "Update", class: "btn" %>
    </div>
    <%= link_to "/decks" do %> <i class="icon-circle-arrow-left"></i> Go Back <% end %>
  <% end %>
</div>