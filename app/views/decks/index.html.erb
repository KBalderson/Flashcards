<header>
  <h1>Flash... AAAAAAAAaaaaaa</h1>
  <img src="http://upload.wikimedia.org/wikipedia/en/7/74/Flash_Rei.png" />
</header>
<section>
  <ul>
    <%- @decks.each do |deck| %>
      <li><%= link_to deck.name, "/decks/#{deck.id}" %> - <%= link_to "[X]", "/decks/#{deck.id}", method: :delete, confirm: "Are you sure?" %> </li>
    <%- end %>
  </ul>
  <%= link_to "New Deck", "/decks/new" %>
</section>