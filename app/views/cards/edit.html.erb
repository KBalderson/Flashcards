<header>
<h1><%= @deck.name %>: Edit a Card</h1>
</header>
<div class="card-form">
  <%= form_for([@deck, @card]) do |form| %>
    <div>
      <%= form.text_area :front, placeholder: "Front" %><br/>
      <%= form.text_area :back, placeholder: "Back" %><br/>
      <%= form.submit "Edit", class: "btn btn-success" %>
    </div>
  <% end %>
</div>